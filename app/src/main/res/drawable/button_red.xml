<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#E6302C" android:endColor="#E6302C" android:angle="90" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <gradient android:startColor="#E6302C" android:endColor="#E6302C" android:angle="90" />
            <corners android:radius="2dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="#FF0000" android:endColor="#FF0000" android:angle="270" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</selector>