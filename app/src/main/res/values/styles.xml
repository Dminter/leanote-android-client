<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="actionMenuTextColor">@color/white</item>

    </style>


    <style name="mText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="mBigText" parent="mText">
        <item name="android:textSize">16.0sp</item>
    </style>

    <style name="mCenterText" parent="mText">
        <item name="android:gravity">center</item>
    </style>

    <style name="mButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_nor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="mRedButton" parent="mButton">
        <item name="android:background">@drawable/button_red</item>
    </style>

    <style name="mEditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:gravity">top|left</item>
        <item name="android:maxLength">5000</item>
    </style>

    <style name="mNullBackgroundEditText" parent="mEditText">
        <item name="android:background">@color/white</item>
    </style>

    <style name="cellRow">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/card</item>
        <item name="android:minHeight">45dp</item>
    </style>
</resources>
